<h1>AjaxApp</h1>
  <%= form_with url: "/posts", method: :post,id: "form" do |form| %>
  <%# contentを取得するために、index.html.erbに下記のハイライトのようにid:"content"を追記 %>
  <%= form.text_field :content  , id: "content"%>
  <%= form.submit '投稿する' , id: "submit" %>
<% end %>
<%# 投稿後にメモを追加する要素として<div id="list"></div>を追記 %>
<div id="list">
</div>
<% @posts.each do |post| %>
  <div class="post" data-id=<%= post.id %> data-check=<%= post.checked %>>
    <div class="post-date">
      投稿日時：<%= post.created_at %>
    </div>
    <div class="post-content">
      <%= post.content %>
    </div>
  </div>
<% end %>
  